{{> privateNav}}


<div class="px-2">
    <div class="flex flex-wrap mt-8">
        {{#each games}}
        <div class="w-1/5 px-3">
            <div class="max-w-sm rounded overflow-hidden shadow-lg">
                <div class="px-6 py-6">
                    <div class="font-bold text-xl mb-2">{{game_name}}</div>

                </div>
                <div class="justify-center mb-3">
                    <button
                        class="bg-blue-500 hover:bg-blue-400 text-white font-semibold py-2 px-4 border-b-6 m-1 p-2 border-blue-700 hover:border-blue-500 rounded">View
                        Leaderboard</button>
                    <input type="button"
                        class="cursor-pointer bg-red-600 hover:bg-red-500 shadow-xl px-5 py-2 m-1 p-2 inline-block text-orange-100 hover:text-white rounded float-right"
                        value="Delete">
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>