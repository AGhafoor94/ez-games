{{> privateNav}}
{{> carousel}}
{{> modal}}
<div class="justify-center">
    <div class="flex flex-wrap items-center justify-center mb-4 mt-4 px-2">
        {{#each game}}
        <div class="flex-auto sm:flex-1 md:flex-auto px-2 rounded h-20 mb-4 mr-4 card orange-border-bottom">
            <img src={{image.medium_url}}>

            <form action="/game" method="POST">
                <div class="font-bold text-center text-sm px-4">{{aliases}}</div>
                <input type="hidden" id="game_id" name="game_id" value={{id}}>
                <input type="hidden" id="game_name" name="game_name" value={{name}}>
                <input type="hidden" id="genre" name="genre" value={{genres}}>
                <div class="flex items-center justify-center mt-2">
                    <button type="submit" class="add-to-profile px-2 mr-2  text-white font-bold rounded">
                        Add to Profile
                    </button>
                    <button class="view-details modal-button px-2 ml-2 text-white font-bold rounded">View
                    </button>
                </div>
            </form>
        </div>
        {{/each}}
    </div>
</div>