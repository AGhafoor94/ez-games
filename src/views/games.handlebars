{{> privateNav}}
{{> carousel}}
<div class="justify-center">
    <div class="flex flex-wrap items-center justify-center mb-4 mt-4 px-2">
        {{#each game}}
        <div class="w-1/6 rounded h-20 mb-2 mr-2 card orange-border-bottom">
            <form action="/game" method="POST">
                <div class="font-bold text-center text-xs px-4">{{name}}</div>
                <input type="hidden" id="game_id" name="game_id" value={{id}}>
                <input type="hidden" id="game_name" name="game_name" value={{name}}>
                <input type="hidden" id="genre" name="genre" value={{genres}}>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold rounded">
                    Add to Profile
                </button>

                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold rounded">
                    View Details
                </button>
            </form>
        </div>
        {{/each}}
    </div>
</div>