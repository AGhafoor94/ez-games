{{> privateNav}}
{{> carousel}}
{{> modal}}

<div class="justify-center">
    <div class="flex flex-wrap items-center justify-center mb-4 mt-4 px-2">
        {{#each game}}
        <div class=" flex-auto sm:flex-1 md:flex-auto md:w-1/3 px-2 rounded h-48 mb-4 mr-4 card orange-border-bottom">
            <div class="font-bold text-center text-sm px-4 right-0">{{name}}</div>
            <p style="font-size: 0.5rem;">{{summary}}</p>
            <form action="/game" method="POST">
                <img class="flex  flex-wrap" src={{url}}>
                <input type="hidden" id="game_id" name="game_id" value={{id}}>
                <input type="hidden" id="game_name" name="game_name" value={{name}}>
                <input type="hidden" id="genre" name="genre" value={{genres}}>
                <div class="flex items-center justify-center mt-2">
                </div>
                <button type="submit"
                    class="add-to-profile px-2 mr-2  items-center justify-center  text-white font-bold rounded">
                    Add to Profile
                </button>
                <button
                    class="view-details modal-button px-2 ml-2  items-center justify-center  text-white font-bold rounded">View
                </button>
            </form>
        </div>
        {{/each}}
    </div>
</div>