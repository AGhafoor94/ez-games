{{> privateNav}}
{{> carousel}}
{{> modal}}
<div class="justify-center">
    {{#each game}}
    <div class="max-w-sm w-full lg:max-w-full lg:flex">
        <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden"
            style="background-image: url(' {{image.original_url}}')" title="{{name}}">
        </div>
        <div
            class="border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
            <div class="mb-8">

                <div class="text-gray-900 font-bold text-xl mb-2">{{name}}</div>
                <p class="text-gray-700 text-base">{{deck}}</p>
            </div>
            <div class="flex items-center">
                <form action="/game" method="POST">
                    <input type="hidden" id="game_id" name="game_id" value={{id}}>
                    <input type="hidden" id="game_name" name="game_name" value={{name}}>
                    <div class="flex items-center justify-center mt-2">
                        <button type="submit" class="add-to-profile px-2 mr-2  text-white font-bold rounded">
                            Add to Profile
                        </button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>