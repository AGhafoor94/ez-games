{{> privateNav}}
{{> carousel}}
{{> modal}}

<div class="flex flex-wrap">
    {{#each game}}
    <div
        class="flex-auto sm:w-full md:w-1/2 lg:w-1/3 xl:w-1/3 mb-4 px-2 rounded mb-4 mr-4 card h-auto orange-border-bottom">
        <div class="max-w-sm w-full lg:max-w-full lg:flex ">
            <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden"
                style="background-image: url('{{image.icon_url}}')" title="{{image.icon_url}}">
            </div>
            <div class="bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between
                    leading-normal">
                <div class="font-bold text-center text-sm px-4">{{name}}</div>
                <div class="flex flex-wrap md:flex-auto sm:flex-1">
                    <div class="sm:w-full md:w-1/2">
                        <form action="/game" method="POST">
                            <input type="hidden" id="game_id" name="game_id" value={{id}}>
                            <input type="hidden" id="game_name" name="game_name" value={{name}}>
                            <input type="hidden" id="genre" name="genre" value={{genres}}>
                            <button type="submit"
                                class="add-to-profile px-4 mr-2  items-center justify-center  text-white font-bold rounded">
                                Add to Profile
                            </button>
                        </form>
                    </div>
                    <div class="sm:w-full md:w-1/2">
                        <a href={{site_detail_url}}>
                            <button
                                class="view-details modal-button px-2 ml-2  items-center justify-center  text-white font-bold rounded">View
                            </button>
                        </a></div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>